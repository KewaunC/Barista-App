<!doctype html>
<html>
<head>
    <title>Order Up!</title>
    <script src="https://kit.fontawesome.com/d60e865119.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body>

  <% if (user.local.email) { %>
    <p>
        <!-- <strong>id</strong>: <%= user._id %><br> -->
        <strong>First Name</strong>: <%= user.local.firstName %><br>
        <strong>Last Name</strong>: <%= user.local.lastName %><br>
        <!-- <strong>email</strong>: <%= user.local.email %><br>
        <strong>password</strong>: <%= user.local.password %> -->
    </p>

    
<% } %>

  <section class="container">
            <h2>Orders!</h2>

            <ul class="orderList">
                <% for(var i=0; i<orders.length; i++) {
                  let completedClass = ''
                  if(orders[i].complete){
                    completedClass = 'completed'
                  }
                  %>
                  <li id="<%= orders[i]._id %>"class="orderUp <%= completedClass %>">
                    <span class="customerName"><%= orders[i].name %></span>
                    <span><%= orders[i].size %></span>
                    <span><%= orders[i].beverage %></span>
                    <span><%= orders[i].flavor %></span>
                    <span><%= orders[i].milkOptions %></span>
                    <span><%= orders[i].note %></span>
                    <span><%= orders[i].complete %></span>
                    <span><i class=" speak fa fa-thumbs-up" aria-hidden="true"></i></span>
                    <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                  </li>
                <% } %>
            </ul>
            
        
  </section>

  <a href="/logout"><button>Log Out</button></a>

<script src="main.js"></script>

</body>
</html>